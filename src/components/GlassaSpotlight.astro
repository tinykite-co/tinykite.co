<section id="glassa" class="py-24 bg-background relative overflow-hidden">
  <div class="container mx-auto px-6">
    <div class="flex flex-col lg:flex-row items-center gap-16">
      <!-- Text Content -->
      <div class="lg:w-1/2">
        <div class="flex items-center gap-4 mb-6">
          <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white font-bold text-xl shadow-lg shadow-blue-500/20">
            g
          </div>
          <div>
            <h3 class="text-2xl font-bold text-text">glassa.ai</h3>
            <p class="text-primary font-medium">Flagship Product</p>
          </div>
        </div>
        <h2 class="text-4xl md:text-5xl font-bold mb-6 text-text">
          Revolutionize your <br/>
          <span class="text-gradient">workplace communication</span>
        </h2>
        <p class="text-gray-600 dark:text-gray-400 text-lg mb-8 leading-relaxed">
          Glassa.ai is the intelligent communication platform designed for modern teams. 
          Seamlessly integrate chat, voice, and AI-driven insights to boost productivity and collaboration.
        </p>
        
        <ul class="space-y-4 mb-10">
          {['AI-Powered Summaries', 'Real-time Translation', 'Smart Workflows'].map((feature) => (
            <li class="flex items-center text-gray-700 dark:text-gray-300">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              {feature}
            </li>
          ))}
        </ul>

        <a href="https://glassa.ai" target="_blank" class="inline-flex items-center px-8 py-4 bg-blue-600 hover:bg-blue-700 text-white rounded-full font-semibold transition-colors duration-300 shadow-lg shadow-blue-600/20">
          Visit Glassa.ai
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>

      <!-- Visual Content -->
      <div class="lg:w-1/2 relative group">
        <div class="absolute -inset-1 bg-gradient-to-r from-blue-600 to-purple-600 rounded-2xl blur opacity-20 dark:opacity-25 group-hover:opacity-40 dark:group-hover:opacity-50 transition duration-1000"></div>
        <div class="relative rounded-2xl overflow-hidden border border-gray-200 dark:border-white/10 shadow-2xl bg-white dark:bg-gray-900">
          <img 
            src="/assets/glassa_ai_dashboard_mockup_1763922577554.png" 
            alt="Glassa.ai Dashboard" 
            class="w-full h-auto transform group-hover:scale-105 transition duration-700"
          />
        </div>
      </div>
    </div>
  </div>
</section>
