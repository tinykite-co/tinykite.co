---
const apps = [
  {
    name: "Community Hub",
    description: "Connect with like-minded individuals in a safe, vibrant space.",
    image: "/assets/iphone_mockup_community_hub_1763922598342.png",
    platform: "iOS & Android",
    badge: "Social",
    appStoreUrl: "#",
    playStoreUrl: "#"
  },
  {
    name: "QuickNote",
    description: "Capture thoughts instantly with our minimalist note-taking tool.",
    image: "/assets/android_mockup_quicknote_1763922626773.png",
    platform: "Android",
    badge: "Productivity",
    appStoreUrl: "#",
    playStoreUrl: "#"
  },
  {
    name: "ZenFocus",
    description: "Find your flow with our meditation and focus timer app.",
    image: "/assets/zenfocus_mockup_1763924656189.png",
    platform: "iOS",
    badge: "Health & Fitness",
    appStoreUrl: "#",
    playStoreUrl: "#"
  },
  {
    name: "TravelMate",
    description: "Plan your perfect trip with smart itineraries and local guides.",
    image: "/assets/travelmate_mockup_1763924688436.png",
    platform: "Android",
    badge: "Travel",
    appStoreUrl: "#",
    playStoreUrl: "#"
  },
  {
    name: "BudgetBuddy",
    description: "Track expenses and manage your finances with ease.",
    image: "/assets/budgetbuddy_mockup_1763924703558.png",
    platform: "iOS",
    badge: "Finance",
    appStoreUrl: "#",
    playStoreUrl: "#"
  }
];
---

<section id="apps" class="py-24 bg-panel relative overflow-hidden">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6 text-text">
        Crafted for <span class="text-gradient">simplicity</span>
      </h2>
      <p class="text-gray-600 dark:text-gray-400 text-lg max-w-2xl mx-auto">
        Explore our growing ecosystem of utility apps.
      </p>
    </div>

    <!-- Carousel Container -->
    <div class="relative group">
      <!-- Navigation Buttons -->
      <button id="prev-btn" class="absolute left-0 top-1/2 -translate-y-1/2 -translate-x-4 z-10 bg-background/80 dark:bg-black/80 p-3 rounded-full shadow-lg text-text hover:scale-110 transition-transform backdrop-blur-sm border border-border hidden md:block">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>
      
      <button id="next-btn" class="absolute right-0 top-1/2 -translate-y-1/2 translate-x-4 z-10 bg-background/80 dark:bg-black/80 p-3 rounded-full shadow-lg text-text hover:scale-110 transition-transform backdrop-blur-sm border border-border hidden md:block">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </button>

      <!-- Scrollable Area -->
      <div id="carousel" class="flex overflow-x-auto snap-x snap-mandatory gap-6 pb-8 scrollbar-hide scroll-smooth">
        {apps.map((app) => (
          <div class="flex-none w-[85vw] md:w-[400px] snap-center">
            <div class="group/card spotlight-card relative h-full bg-background dark:bg-gray-900 rounded-3xl border border-border overflow-hidden hover:border-primary/50 transition-colors duration-300 flex flex-col shadow-lg dark:shadow-none">
              
              <!-- Image Area -->
              <div class="relative aspect-[4/3] overflow-hidden bg-gray-100 dark:bg-gray-800">
                <img 
                  src={app.image} 
                  alt={app.name} 
                  class="w-full h-full object-cover transform group-hover/card:scale-105 transition duration-700"
                />
                <div class="absolute top-4 left-4">
                  <span class="inline-block px-3 py-1 rounded-full bg-black/50 backdrop-blur-md text-white text-xs font-medium border border-white/10">
                    {app.badge}
                  </span>
                </div>
              </div>

              <!-- Content Area -->
              <div class="p-6 flex flex-col flex-grow">
                <h3 class="text-2xl font-bold mb-2 text-text">{app.name}</h3>
                <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed mb-6 flex-grow">
                  {app.description}
                </p>

                <!-- Store Buttons -->
                <div class="flex gap-3 mt-auto">
                  <a href={app.appStoreUrl} class="flex-1 flex items-center justify-center gap-2 px-4 py-2.5 bg-text text-background rounded-xl font-medium text-sm hover:opacity-90 transition-opacity">
                    <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor"><path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.21-1.96 1.07-3.11-1.05.05-2.31.71-3.06 1.58-.69.8-1.27 2.09-1.1 3.07 1.17.09 2.36-.73 3.09-1.54z"/></svg>
                    App Store
                  </a>
                  <a href={app.playStoreUrl} class="flex-1 flex items-center justify-center gap-2 px-4 py-2.5 border border-border text-text rounded-xl font-medium text-sm hover:bg-gray-100 dark:hover:bg-white/5 transition-colors">
                    <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor"><path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.5,12.92 20.16,13.19L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/></svg>
                    Google Play
                  </a>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<script>
  const carousel = document.getElementById('carousel');
  const prevBtn = document.getElementById('prev-btn');
  const nextBtn = document.getElementById('next-btn');

  if (carousel && prevBtn && nextBtn) {
    prevBtn.addEventListener('click', () => {
      carousel.scrollBy({ left: -400, behavior: 'smooth' });
    });

    nextBtn.addEventListener('click', () => {
      carousel.scrollBy({ left: 400, behavior: 'smooth' });
    });
  }
</script>

<style>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>
