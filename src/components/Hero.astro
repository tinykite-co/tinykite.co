<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden bg-background">
  <!-- Background Image with Overlay -->
  <!-- Dynamic CSS Background -->
  <div class="absolute inset-0 z-0 overflow-hidden pointer-events-none">
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-background/50 to-background z-10"></div>
    
    <!-- Interactive Gradient Orbs -->
    <div id="hero-bg-orb-1" class="absolute w-[800px] h-[800px] rounded-full blur-3xl opacity-20 dark:opacity-15 bg-primary mix-blend-multiply dark:mix-blend-screen transition-transform duration-100 ease-out top-0 left-0"></div>
    <div id="hero-bg-orb-2" class="absolute w-[600px] h-[600px] rounded-full blur-3xl opacity-20 dark:opacity-15 bg-secondary mix-blend-multiply dark:mix-blend-screen transition-transform duration-300 ease-out top-0 left-0"></div>
  </div>

  <script>
    const section = document.getElementById('hero');
    const orb1 = document.getElementById('hero-bg-orb-1');
    const orb2 = document.getElementById('hero-bg-orb-2');

    if (section && orb1 && orb2) {
      // Initialize orbs at center
      const initOrbs = () => {
        const rect = section.getBoundingClientRect();
        const centerX = rect.width / 2;
        const centerY = rect.height / 2;
        orb1.style.transform = `translate(${centerX - 400}px, ${centerY - 400}px)`;
        orb2.style.transform = `translate(${centerX - 300}px, ${centerY - 300}px)`;
      };
      
      // Run on load and resize
      initOrbs();
      window.addEventListener('resize', initOrbs);

      section.addEventListener('mousemove', (e) => {
        const rect = section.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;

        // Orb 1 follows mouse directly but smoothly
        orb1.style.transform = `translate(${x - 400}px, ${y - 400}px)`;

        // Orb 2 moves in opposition
        const x2 = rect.width - x;
        const y2 = rect.height - y;
        orb2.style.transform = `translate(${x2 - 300}px, ${y2 - 300}px)`;
      });
    }
  </script>

  <!-- Content -->
  <div class="relative z-10 container mx-auto px-6 text-center">
    <div class="mb-6">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/5 border border-white/10 backdrop-blur-sm mb-8 animate-fade-in">
        <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
        <span class="text-sm text-gray-400">Makers of <a href="https://glassa.ai" target="_blank" class="text-white hover:text-primary transition-colors font-medium">glassa.ai</a></span>
      </div>

      <h1 class="text-5xl md:text-7xl font-bold tracking-tight text-text">
        <span class="inline-block reveal-on-scroll">We</span>
        <span class="inline-block reveal-on-scroll delay-100">build</span>
        <span class="inline-block reveal-on-scroll delay-200 text-gradient">tomorrow.</span>
      </h1>
    </div>
    
    <div class="reveal-on-scroll delay-300">
      <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto mb-10 font-light">
        TinyKite is a product studio crafting a seamless ecosystem of apps that empower, inspire, and connect.
      </p>
    </div>

    <div class="reveal-on-scroll delay-300">
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#apps" class="magnetic-btn px-8 py-4 bg-text text-background rounded-full font-semibold hover:opacity-90 transition-opacity duration-300">
          Explore Apps
        </a>
        <a href="#glassa" class="magnetic-btn px-8 py-4 glass-panel text-text rounded-full font-semibold hover:bg-text/10 transition-colors duration-300">
          Meet Glassa.ai
        </a>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-10 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>
