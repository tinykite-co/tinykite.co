<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden bg-background">
  <!-- Background Image with Overlay -->
  <!-- Dynamic CSS Background -->
  <div class="absolute inset-0 z-0 overflow-hidden pointer-events-none">
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-background/50 to-background z-10"></div>
    
    <!-- Interactive Gradient Orbs -->
    <div id="hero-bg-orb-1" class="absolute w-[800px] h-[800px] rounded-full blur-3xl opacity-20 dark:opacity-15 bg-primary mix-blend-multiply dark:mix-blend-screen transition-transform duration-100 ease-out -translate-x-1/2 -translate-y-1/2" style="top: 50%; left: 50%;"></div>
    <div id="hero-bg-orb-2" class="absolute w-[600px] h-[600px] rounded-full blur-3xl opacity-20 dark:opacity-15 bg-secondary mix-blend-multiply dark:mix-blend-screen transition-transform duration-300 ease-out -translate-x-1/2 -translate-y-1/2" style="top: 50%; left: 50%;"></div>
  </div>

  <script>
    const section = document.getElementById('hero');
    const orb1 = document.getElementById('hero-bg-orb-1');
    const orb2 = document.getElementById('hero-bg-orb-2');

    if (section && orb1 && orb2) {
      section.addEventListener('mousemove', (e) => {
        const rect = section.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;

        // Orb 1 follows mouse directly but smoothly
        orb1.style.transform = `translate(${x - 400}px, ${y - 400}px)`;

        // Orb 2 moves in opposition
        const x2 = rect.width - x;
        const y2 = rect.height - y;
        orb2.style.transform = `translate(${x2 - 300}px, ${y2 - 300}px)`;
      });
    }
  </script>

  <!-- Content -->
  <div class="relative z-10 container mx-auto px-6 text-center">
    <div class="animate-slide-up opacity-0" style="animation-delay: 0.2s;">
      <h1 class="text-5xl md:text-7xl font-bold mb-6 tracking-tight text-text">
        We build <span class="text-gradient">tomorrow</span>.
      </h1>
    </div>
    
    <div class="animate-slide-up opacity-0" style="animation-delay: 0.4s;">
      <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto mb-10 font-light">
        TinyKite is a product studio crafting a seamless ecosystem of apps that empower, inspire, and connect.
      </p>
    </div>

    <div class="animate-slide-up opacity-0" style="animation-delay: 0.6s;">
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#apps" class="px-8 py-4 bg-text text-background rounded-full font-semibold hover:opacity-90 transition-opacity duration-300">
          Explore Apps
        </a>
        <a href="#glassa" class="px-8 py-4 glass-panel text-text rounded-full font-semibold hover:bg-text/10 transition-colors duration-300">
          Meet Glassa.ai
        </a>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-10 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>
