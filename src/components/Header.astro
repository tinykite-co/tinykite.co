---
import ThemeToggle from './ThemeToggle.astro';

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 bg-white/80 dark:bg-dark/80 backdrop-blur-sm border-b border-gray-200 dark:border-dark-light">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="flex items-center space-x-2">
        <span class="text-2xl font-bold text-primary">TinyKite</span>
      </a>
      
      <div class="hidden md:flex items-center space-x-8">
        <a 
          href="/" 
          class:list={[
            "hover:text-primary transition-colors",
            currentPath === "/" ? "text-primary font-medium" : ""
          ]}
        >
          Home
        </a>
        <a 
          href="/apps" 
          class:list={[
            "hover:text-primary transition-colors",
            currentPath.startsWith("/apps") ? "text-primary font-medium" : ""
          ]}
        >
          Apps
        </a>
        <a 
          href="/blog" 
          class:list={[
            "hover:text-primary transition-colors",
            currentPath.startsWith("/blog") ? "text-primary font-medium" : ""
          ]}
        >
          Blog
        </a>
        <a 
          href="/about" 
          class:list={[
            "hover:text-primary transition-colors",
            currentPath === "/about" ? "text-primary font-medium" : ""
          ]}
        >
          About
        </a>
        <a 
          href="/changelog" 
          class:list={[
            "hover:text-primary transition-colors",
            currentPath === "/changelog" ? "text-primary font-medium" : ""
          ]}
        >
          Changelog
        </a>
      </div>

      <div class="flex items-center space-x-4">
        <ThemeToggle />
        <button 
          id="mobile-menu-toggle"
          class="md:hidden p-2 rounded-lg bg-gray-200 dark:bg-dark-light"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 space-y-2">
      <a href="/" class="block py-2 hover:text-primary transition-colors">Home</a>
      <a href="/apps" class="block py-2 hover:text-primary transition-colors">Apps</a>
      <a href="/blog" class="block py-2 hover:text-primary transition-colors">Blog</a>
      <a href="/about" class="block py-2 hover:text-primary transition-colors">About</a>
      <a href="/changelog" class="block py-2 hover:text-primary transition-colors">Changelog</a>
    </div>
  </nav>
</header>

<script>
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuToggle?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
