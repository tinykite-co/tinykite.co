---
import ThemeToggle from './ThemeToggle.astro';

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 bg-white/80 dark:bg-dark/80 backdrop-blur-sm border-b border-gray-200 dark:border-dark-light">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="flex items-center space-x-2">
        <img src="/tinykite-logo.svg" alt="TinyKite Logo" class="w-6 h-6" />
        <span class="text-xl font-bold text-gray-900 dark:text-white">TinyKite</span>
      </a>
      
      <div class="hidden md:flex items-center space-x-8">
        <a 
          href="/" 
          class:list={[
            "hover:text-primary transition-colors",
            currentPath === "/" ? "text-primary font-medium" : ""
          ]}
        >
          Ecosystem
        </a>
        <a 
          href="/blog" 
          class:list={[
            "hover:text-primary transition-colors",
            currentPath.startsWith("/blog") ? "text-primary font-medium" : ""
          ]}
        >
          Innovation
        </a>
        <a 
          href="/about" 
          class:list={[
            "hover:text-primary transition-colors",
            currentPath === "/about" ? "text-primary font-medium" : ""
          ]}
        >
          About
        </a>
        <a 
          href="/blog" 
          class:list={[
            "hover:text-primary transition-colors",
            currentPath.startsWith("/blog") ? "text-primary font-medium" : ""
          ]}
        >
          Blog
        </a>
      </div>

      <div class="flex items-center space-x-4">
        <a href="/about" class="hidden md:inline-block px-6 py-2 bg-gradient-to-r from-primary to-secondary text-white font-medium rounded-lg hover:opacity-90 transition-opacity">
          Join Us
        </a>
        <ThemeToggle />
        <button 
          id="mobile-menu-toggle"
          class="md:hidden p-2 rounded-lg bg-gray-200 dark:bg-dark-light"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 space-y-2">
      <a href="/" class="block py-2 hover:text-primary transition-colors">Ecosystem</a>
      <a href="/blog" class="block py-2 hover:text-primary transition-colors">Innovation</a>
      <a href="/about" class="block py-2 hover:text-primary transition-colors">About</a>
      <a href="/blog" class="block py-2 hover:text-primary transition-colors">Blog</a>
      <a href="/about" class="block py-2 px-4 bg-gradient-to-r from-primary to-secondary text-white font-medium rounded-lg hover:opacity-90 transition-opacity text-center">
        Join Us
      </a>
    </div>
  </nav>
</header>

<script>
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuToggle?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
