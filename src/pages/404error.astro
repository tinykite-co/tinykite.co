---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found - TinyKite">
  <section class="flex flex-col items-center justify-center min-h-[80vh] text-center px-6">
    <div class="relative">
      <!-- Animated 404 using CSS or Lottie -->
      <div class="text-[10rem] font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-primary via-secondary to-tertiary animate-pulse">
        404
      </div>
      <p class="mt-4 text-xl text-gray-600 dark:text-gray-400">
        The page you’re looking for doesn’t exist.
      </p>
    </div>

    <a 
      href="/" 
      class="mt-8 inline-block px-6 py-3 bg-gradient-to-r from-primary to-secondary text-white font-medium rounded-lg hover:opacity-90 transition-opacity"
    >
      Go Home
    </a>
  </section>

  <style>
    @keyframes pulse {
      0%, 100% {
        opacity: 1;
        transform: scale(1);
      }
      50% {
        opacity: 0.6;
        transform: scale(1.05);
      }
    }
    .animate-pulse {
      animation: pulse 2s infinite;
    }
  </style>
</Layout>
