---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us - tinykite">
  <main class="pt-32 pb-24 relative overflow-hidden min-h-screen">
    <!-- Background Elements -->
    <div class="absolute inset-0 bg-background z-0">
      <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-blue-500/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-purple-500/10 rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h1 class="text-4xl md:text-5xl font-bold mb-6 text-text">Get in Touch</h1>
          <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
            Have a question about our apps or want to explore a partnership? We'd love to hear from you.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-12 items-start">
          <!-- Contact Info -->
          <div class="space-y-8">
            <div class="bg-white/50 dark:bg-white/5 backdrop-blur-lg p-8 rounded-2xl border border-white/10">
              <h3 class="text-xl font-semibold mb-6 text-text">Contact Information</h3>
              
              <div class="space-y-6">
                <div class="flex items-start gap-4">
                  <div class="w-10 h-10 rounded-full bg-blue-500/10 flex items-center justify-center text-blue-500 shrink-0">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm text-gray-500 mb-1">Email</p>
                    <a href="mailto:hello@tinykite.co" class="text-lg font-medium text-text hover:text-primary transition-colors">hello@tinykite.co</a>
                  </div>
                </div>

                <div class="flex items-start gap-4">
                  <div class="w-10 h-10 rounded-full bg-purple-500/10 flex items-center justify-center text-purple-500 shrink-0">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm text-gray-500 mb-1">Location</p>
                    <p class="text-lg font-medium text-text">London, United Kingdom</p>
                  </div>
                </div>
              </div>
            </div>

            <div class="bg-blue-500/5 border border-blue-500/10 p-8 rounded-2xl">
              <h3 class="text-lg font-semibold mb-2 text-text">Join our Waitlist</h3>
              <p class="text-gray-600 dark:text-gray-400 mb-4">
                Be the first to know when we launch new apps.
              </p>
              <a href="/coming-soon" class="inline-flex items-center text-blue-500 font-medium hover:gap-2 transition-all">
                Sign up now <span class="ml-1">&rarr;</span>
              </a>
            </div>
          </div>

          <!-- Contact Form -->
          <form class="bg-white dark:bg-white/5 backdrop-blur-lg p-8 rounded-2xl border border-gray-200 dark:border-white/10 shadow-xl" action="#" method="POST">
            <div class="space-y-6">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Name</label>
                <input type="text" id="name" name="name" class="w-full px-4 py-3 rounded-lg bg-gray-50 dark:bg-black/50 border border-gray-200 dark:border-white/10 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all text-text" placeholder="John Doe" required />
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Email</label>
                <input type="email" id="email" name="email" class="w-full px-4 py-3 rounded-lg bg-gray-50 dark:bg-black/50 border border-gray-200 dark:border-white/10 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all text-text" placeholder="john@example.com" required />
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Message</label>
                <textarea id="message" name="message" rows="4" class="w-full px-4 py-3 rounded-lg bg-gray-50 dark:bg-black/50 border border-gray-200 dark:border-white/10 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all text-text resize-none" placeholder="How can we help you?" required></textarea>
              </div>

              <button type="submit" class="w-full py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-lg hover:opacity-90 transition-opacity shadow-lg shadow-blue-500/25">
                Send Message
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>
</Layout>
