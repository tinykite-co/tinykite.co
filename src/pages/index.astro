---
import Layout from '../layouts/Layout.astro';
import { apps } from '../data/apps';
---

<Layout title="TinyKite - We innovate. We build. We connect.">
  <!-- Single Screen Hero - Fixed Height, No Page Scroll -->
  <div class="fixed inset-0 overflow-hidden bg-gradient-to-br from-gray-50 to-white dark:from-dark-lighter dark:to-dark">
    <!-- Desktop Layout -->
    <div class="hidden lg:flex h-full items-center justify-center px-8">
      <div class="grid grid-cols-3 gap-12 items-center max-w-7xl w-full">
        <!-- Left Phone - iPhone -->
        <div class="flex flex-col items-center justify-center">
          <div class="relative w-72 h-[600px] bg-gray-900 rounded-[3rem] p-3 shadow-2xl">
            <!-- iPhone Notch -->
            <div class="absolute top-0 left-1/2 -translate-x-1/2 w-40 h-7 bg-gray-900 rounded-b-3xl z-10"></div>
            <!-- Phone Screen with Scrollable Content -->
            <div id="iphone-screen" class="relative w-full h-full bg-white rounded-[2.5rem] overflow-hidden">
              <div class="h-full overflow-y-auto snap-y snap-mandatory scrollbar-hide" id="phone-scroll-container">
                {apps.map((app) => (
                  <div class="h-full snap-start flex items-center justify-center p-6" data-app-id={app.id}>
                    <div class="text-center">
                      <div class="text-6xl mb-4">{app.id === 1 ? 'üí¨' : app.id === 2 ? 'üìù' : 'üé®'}</div>
                      <h3 class="text-xl font-bold mb-2">{app.name}</h3>
                      <p class="text-sm text-gray-600">{app.description.substring(0, 60)}...</p>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>
          <p id="iphone-label" class="mt-6 text-sm font-medium text-gray-600 dark:text-gray-400">Community Hub</p>
        </div>

        <!-- Center Content -->
        <div class="text-center space-y-6">
          <div>
            <h1 class="text-5xl font-bold text-gray-900 dark:text-white mb-4 leading-tight">
              We innovate. We build.<br/>We connect.
            </h1>
            <p class="text-lg text-gray-600 dark:text-gray-400 max-w-lg mx-auto">
              TinyKite is a product studio crafting a seamless ecosystem of apps that empower and inspire.
            </p>
          </div>

          <!-- Dynamic App Showcase -->
          <div class="bg-white dark:bg-dark-light rounded-2xl p-8 shadow-xl border border-gray-100 dark:border-dark-light">
            <h2 id="app-title" class="text-3xl font-bold text-gray-900 dark:text-white mb-4">Community Hub</h2>
            <p id="app-description" class="text-gray-600 dark:text-gray-400 mb-6 text-base leading-relaxed">
              Connect with like-minded individuals, join groups, and share passions in a vibrant, safe space.
            </p>
            
            <!-- App Store Badges -->
            <div class="flex justify-center gap-4 mb-6">
              <a id="appstore-link" href="https://apps.apple.com/app/community-hub" target="_blank" rel="noopener noreferrer" class="transform hover:scale-105 transition-transform">
                <img src="/app-store-badge.svg" alt="Download on App Store" class="h-12" />
              </a>
              <a id="playstore-link" href="https://play.google.com/store/apps/details?id=com.tinykite.communityhub" target="_blank" rel="noopener noreferrer" class="transform hover:scale-105 transition-transform">
                <img src="/google-play-badge.svg" alt="Get it on Google Play" class="h-12" />
              </a>
            </div>

            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a href="/apps" class="px-8 py-3 bg-gradient-to-r from-primary to-secondary text-white font-semibold rounded-lg hover:opacity-90 transition-opacity shadow-lg">
                Explore Our Apps
              </a>
              <a href="/about" class="px-8 py-3 border-2 border-primary text-primary dark:text-primary font-semibold rounded-lg hover:bg-primary hover:text-white transition-colors">
                Request an App ‚Üí
              </a>
            </div>
          </div>

          <p class="text-sm text-gray-500 dark:text-gray-500 flex items-center justify-center gap-2">
            Scroll to see our portfolio 
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
          </p>
        </div>

        <!-- Right Phone - Android -->
        <div class="flex flex-col items-center justify-center">
          <div class="relative w-72 h-[600px] bg-gray-900 rounded-[2.5rem] p-3 shadow-2xl">
            <!-- Phone Screen with Scrollable Content -->
            <div id="android-screen" class="relative w-full h-full bg-white rounded-[2rem] overflow-hidden">
              <div class="h-full overflow-y-auto snap-y snap-mandatory scrollbar-hide" id="phone-scroll-container-android">
                {apps.map((app) => (
                  <div class="h-full snap-start flex items-center justify-center p-6" data-app-id={app.id}>
                    <div class="text-center">
                      <div class="text-6xl mb-4">{app.id === 1 ? 'üí¨' : app.id === 2 ? 'üìù' : 'üé®'}</div>
                      <h3 class="text-xl font-bold mb-2">{app.name}</h3>
                      <p class="text-sm text-gray-600">{app.description.substring(0, 60)}...</p>
                    </div>
                  </div>
                ))}
              </div>
            </div>
            <!-- Android Navigation Bar -->
            <div class="absolute bottom-1 left-1/2 -translate-x-1/2 w-32 h-1 bg-gray-700 rounded-full"></div>
          </div>
          <p id="android-label" class="mt-6 text-sm font-medium text-gray-600 dark:text-gray-400">Community Hub</p>
        </div>
      </div>
    </div>

    <!-- Mobile Layout -->
    <div class="lg:hidden flex flex-col h-full overflow-hidden">
      <div class="flex-1 flex items-center justify-center px-4 py-8">
        <div class="text-center space-y-6 max-w-md">
          <div>
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-4 leading-tight">
              We innovate.<br/>We build.<br/>We connect.
            </h1>
            <p class="text-base text-gray-600 dark:text-gray-400">
              TinyKite is a product studio crafting a seamless ecosystem of apps that empower and inspire.
            </p>
          </div>

          <!-- App Showcase -->
          <div class="bg-white dark:bg-dark-light rounded-2xl p-6 shadow-lg relative">
            <!-- Scroll Indicators -->
            <div class="absolute right-4 top-1/2 -translate-y-1/2 flex flex-col gap-2 z-10">
              {apps.map((app, index) => (
                <div 
                  class={`w-2 h-2 rounded-full transition-colors ${index === 0 ? 'bg-gray-900 dark:bg-white' : 'bg-gray-300 dark:bg-gray-600'}`}
                  data-indicator={app.id}
                ></div>
              ))}
            </div>

            <h2 id="app-title-mobile" class="text-xl font-bold text-gray-900 dark:text-white mb-2">Community Hub</h2>
            <p id="app-description-mobile" class="text-sm text-gray-600 dark:text-gray-400 mb-4">
              Connect with like-minded individuals, join groups, and share passions in a vibrant, safe space.
            </p>
            
            <!-- App Store Badges -->
            <div class="flex justify-center gap-3 mb-6">
              <a id="appstore-link-mobile" href="https://apps.apple.com/app/community-hub" target="_blank" rel="noopener noreferrer" class="transform hover:scale-105 transition-transform">
                <img src="/app-store-badge.svg" alt="Download on App Store" class="h-10" />
              </a>
              <a id="playstore-link-mobile" href="https://play.google.com/store/apps/details?id=com.tinykite.communityhub" target="_blank" rel="noopener noreferrer" class="transform hover:scale-105 transition-transform">
                <img src="/google-play-badge.svg" alt="Get it on Google Play" class="h-10" />
              </a>
            </div>

            <!-- CTA Buttons -->
            <div class="flex flex-col gap-3">
              <a href="/apps" class="px-6 py-3 bg-gradient-to-r from-primary to-secondary text-white font-semibold rounded-lg hover:opacity-90 transition-opacity shadow-lg text-center">
                Explore Our Apps
              </a>
              <a href="/about" class="px-6 py-3 border-2 border-primary text-primary font-semibold rounded-lg hover:bg-primary hover:text-white transition-colors text-center">
                Learn Our Story ‚Üí
              </a>
            </div>
          </div>

          <p class="text-sm text-gray-500 dark:text-gray-500 flex items-center justify-center gap-2">
            Scroll to see our portfolio 
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script define:vars={{ apps }}>
  // App data for dynamic updates
  const appsData = apps;
  let currentAppIndex = 0;

  // Update center content based on current app
  function updateAppContent(appId) {
    const app = appsData.find(a => a.id === appId);
    if (!app) return;

    // Update desktop content
    const titleEl = document.getElementById('app-title');
    const descEl = document.getElementById('app-description');
    const appStoreLink = document.getElementById('appstore-link');
    const playStoreLink = document.getElementById('playstore-link');
    const iphoneLabel = document.getElementById('iphone-label');
    const androidLabel = document.getElementById('android-label');

    if (titleEl) titleEl.textContent = app.name;
    if (descEl) descEl.textContent = app.description;
    if (appStoreLink) appStoreLink.href = app.appStoreUrl;
    if (playStoreLink) playStoreLink.href = app.playStoreUrl;
    if (iphoneLabel) iphoneLabel.textContent = app.name;
    if (androidLabel) androidLabel.textContent = app.name;

    // Update mobile content
    const titleMobile = document.getElementById('app-title-mobile');
    const descMobile = document.getElementById('app-description-mobile');
    const appStoreLinkMobile = document.getElementById('appstore-link-mobile');
    const playStoreLinkMobile = document.getElementById('playstore-link-mobile');

    if (titleMobile) titleMobile.textContent = app.name;
    if (descMobile) descMobile.textContent = app.description;
    if (appStoreLinkMobile) appStoreLinkMobile.href = app.appStoreUrl;
    if (playStoreLinkMobile) playStoreLinkMobile.href = app.playStoreUrl;

    // Update mobile indicators
    const indicators = document.querySelectorAll('[data-indicator]');
    indicators.forEach((indicator, index) => {
      if (index === appId - 1) {
        indicator.classList.remove('bg-gray-300', 'dark:bg-gray-600');
        indicator.classList.add('bg-gray-900', 'dark:bg-white');
      } else {
        indicator.classList.remove('bg-gray-900', 'dark:bg-white');
        indicator.classList.add('bg-gray-300', 'dark:bg-gray-600');
      }
    });
  }

  // Handle scroll wheel for cycling through apps
  let scrollTimeout;
  function handleWheel(e) {
    e.preventDefault();
    
    clearTimeout(scrollTimeout);
    scrollTimeout = setTimeout(() => {
      if (e.deltaY > 0 && currentAppIndex < appsData.length - 1) {
        // Scroll down - next app
        currentAppIndex++;
      } else if (e.deltaY < 0 && currentAppIndex > 0) {
        // Scroll up - previous app
        currentAppIndex--;
      } else {
        return;
      }

      const appId = appsData[currentAppIndex].id;
      
      // Scroll both phone containers
      const iphoneContainer = document.getElementById('phone-scroll-container');
      const androidContainer = document.getElementById('phone-scroll-container-android');
      
      if (iphoneContainer) {
        const targetScroll = iphoneContainer.children[0].children[currentAppIndex];
        if (targetScroll) {
          targetScroll.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      }
      
      if (androidContainer) {
        const targetScroll = androidContainer.children[0].children[currentAppIndex];
        if (targetScroll) {
          targetScroll.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      }

      updateAppContent(appId);
    }, 50);
  }

  // Add wheel event listener
  if (typeof window !== 'undefined') {
    window.addEventListener('wheel', handleWheel, { passive: false });
    
    // Also handle touch swipe on mobile
    let touchStartY = 0;
    window.addEventListener('touchstart', (e) => {
      touchStartY = e.touches[0].clientY;
    });
    
    window.addEventListener('touchmove', (e) => {
      const touchY = e.touches[0].clientY;
      const diff = touchStartY - touchY;
      
      if (Math.abs(diff) > 50) {
        if (diff > 0 && currentAppIndex < appsData.length - 1) {
          currentAppIndex++;
          updateAppContent(appsData[currentAppIndex].id);
          touchStartY = touchY;
        } else if (diff < 0 && currentAppIndex > 0) {
          currentAppIndex--;
          updateAppContent(appsData[currentAppIndex].id);
          touchStartY = touchY;
        }
      }
    });
  }
</script>

<style>
  /* Hide scrollbar but keep functionality */
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>
</Layout>
