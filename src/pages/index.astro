---
import Layout from "../layouts/Layout.astro";
import { apps } from "../data/apps";
---

<Layout title="TinyKite - We innovate. We build. We connect.">
  <div
    class="fixed inset-0 overflow-hidden bg-gradient-to-br from-gray-50 to-white dark:from-dark-lighter dark:to-dark"
  >
    <!-- Desktop Layout -->
    <div class="hidden lg:flex h-full items-center justify-center px-8">
      <div class="grid grid-cols-3 gap-12 items-center max-w-7xl w-full">
        <!-- Left Phone - iPhone -->
        <div class="flex flex-col items-center justify-center">
          <div class="relative w-72 h-[600px] bg-gray-900 rounded-[3rem] p-3 shadow-2xl overflow-hidden transition-all duration-700">
            <div
              class="absolute top-0 left-1/2 -translate-x-1/2 w-40 h-7 bg-gray-900 rounded-b-3xl z-10"
            ></div>

            <!-- Phone Screen -->
            <div
              id="iphone-screen"
              class="relative w-full h-full rounded-[2.5rem] overflow-hidden"
              style="background-color: #4F46E5;"
            >
              <div
                class="h-full overflow-y-auto snap-y snap-mandatory scrollbar-hide relative"
                id="phone-scroll-container"
              >
                {
                  apps.map((app) => (
                    <div
                      class="h-full snap-start relative flex items-center justify-center"
                      data-app-id={app.id}
                    >
                      <p class="relative z-10 text-white text-xl font-semibold drop-shadow-md">
                        {app.name}
                      </p>
                    </div>
                  ))
                }
              </div>
            </div>
          </div>
          <p
            id="iphone-label"
            class="mt-6 text-sm font-medium text-gray-600 dark:text-gray-400"
          >
            Community Hub
          </p>
        </div>

        <!-- Center Content -->
        <div class="text-center space-y-6">
          <div>
            <h1
              class="text-5xl font-bold text-gray-900 dark:text-white mb-4 leading-tight"
            >
              We innovate. We build.<br />We connect.
            </h1>
            <p
              class="text-lg text-gray-600 dark:text-gray-400 max-w-lg mx-auto"
            >
              TinyKite is a product studio crafting a seamless ecosystem of apps
              that empower and inspire.
            </p>
          </div>

          <!-- Dynamic App Showcase -->
          <div
            class="bg-white dark:bg-dark-light rounded-2xl p-8 shadow-xl border border-gray-100 dark:border-dark-light"
          >
            <h2
              id="app-title"
              class="text-3xl font-bold text-gray-900 dark:text-white mb-4"
            >
              Community Hub
            </h2>
            <p
              id="app-description"
              class="text-gray-600 dark:text-gray-400 mb-6 text-base leading-relaxed"
            >
              Connect with like-minded individuals, join groups, and share
              passions in a vibrant, safe space.
            </p>

            <!-- âœ… Fixed App Store Badges -->
            <div class="flex justify-center gap-3 mb-6 items-center">
              <a
                id="appstore-link"
                href="#"
                target="_blank"
                rel="noopener noreferrer"
                class="transform hover:scale-105 transition-transform block"
              >
                <img
                  src="/app-store-badge.svg"
                  alt="Download on App Store"
                  class="store-badge appstore"
                  loading="eager"
                />
              </a>

              <a
                id="playstore-link"
                href="#"
                target="_blank"
                rel="noopener noreferrer"
                class="transform hover:scale-105 transition-transform block"
              >
                <img
                  src="/google-play-badge.svg"
                  alt="Get it on Google Play"
                  class="store-badge playstore"
                  loading="eager"
                />
              </a>
            </div>


            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a
                href="/apps"
                class="px-8 py-3 bg-gradient-to-r from-primary to-secondary text-white font-semibold rounded-lg hover:opacity-90 transition-opacity shadow-lg"
              >
                Explore Our Apps
              </a>
              <a
                href="/about"
                class="px-8 py-3 border-2 border-primary text-primary dark:text-primary font-semibold rounded-lg hover:bg-primary hover:text-white transition-colors"
              >
                Request an App â†’
              </a>
            </div>
          </div>

          <p
            class="text-sm text-gray-500 dark:text-gray-500 flex items-center justify-center gap-2"
          >
            Scroll to see our portfolio
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 14l-7 7m0 0l-7-7m7 7V3"
              ></path>
            </svg>
          </p>
        </div>

        <!-- Right Phone - Android -->
        <div class="flex flex-col items-center justify-center">
          <div class="relative w-72 h-[600px] bg-gray-900 rounded-[2.5rem] p-3 shadow-2xl overflow-hidden transition-all duration-700">
            <div
              id="android-screen"
              class="relative w-full h-full rounded-[2rem] overflow-hidden"
              style="background-color: #4F46E5;"
            >
              <div
                class="h-full overflow-y-auto snap-y snap-mandatory scrollbar-hide relative"
                id="phone-scroll-container-android"
              >
                {
                  apps.map((app) => (
                    <div
                      class="h-full snap-start relative flex items-center justify-center"
                      data-app-id={app.id}
                    >
                      <p class="relative z-10 text-white text-xl font-semibold drop-shadow-md">
                        {app.name}
                      </p>
                    </div>
                  ))
                }
              </div>
            </div>
            <div
              class="absolute bottom-1 left-1/2 -translate-x-1/2 w-32 h-1 bg-gray-700 rounded-full"
            ></div>
          </div>
          <p
            id="android-label"
            class="mt-6 text-sm font-medium text-gray-600 dark:text-gray-400"
          >
            Community Hub
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<!-- âœ… Smooth Scroll + Color Transition Script -->
<script define:vars={{ apps }}>
  const appsData = apps;
  let currentAppIndex = 0;
  let isAnimating = false;

  function updateAppContent(app) {
    document.getElementById("app-title").textContent = app.name;
    document.getElementById("app-description").textContent = app.description;
    document.getElementById("appstore-link").href = app.appStoreUrl;
    document.getElementById("playstore-link").href = app.playStoreUrl;
    document.getElementById("iphone-label").textContent = app.name;
    document.getElementById("android-label").textContent = app.name;

    // ðŸŽ¨ Smooth background color transition
    const iphoneScreen = document.getElementById("iphone-screen");
    const androidScreen = document.getElementById("android-screen");
    [iphoneScreen, androidScreen].forEach((el) => {
      if (el) {
        el.animate(
          [
            { backgroundColor: el.style.backgroundColor },
            { backgroundColor: app.bgColor }
          ],
          { duration: 800, easing: "ease-in-out", fill: "forwards" }
        );
      }
    });
  }

  function scrollToApp(appId) {
    const iphoneContainer = document.getElementById("phone-scroll-container");
    const androidContainer = document.getElementById("phone-scroll-container-android");
    const iphoneTarget = iphoneContainer?.querySelector(`[data-app-id="${appId}"]`);
    const androidTarget = androidContainer?.querySelector(`[data-app-id="${appId}"]`);
    iphoneTarget?.scrollIntoView({ behavior: "smooth", block: "start" });
    androidTarget?.scrollIntoView({ behavior: "smooth", block: "start" });
  }

  function handleWheel(e) {
    if (isAnimating) return;
    isAnimating = true;

    if (e.deltaY > 0 && currentAppIndex < appsData.length - 1) currentAppIndex++;
    else if (e.deltaY < 0 && currentAppIndex > 0) currentAppIndex--;
    else {
      isAnimating = false;
      return;
    }

    const app = appsData[currentAppIndex];
    scrollToApp(app.id);
    updateAppContent(app);

    // Unlock next animation after transition
    setTimeout(() => (isAnimating = false), 900);
  }

  if (typeof window !== "undefined") {
    window.addEventListener("wheel", handleWheel, { passive: true });
  }
</script>

<style>
  html {
    scroll-behavior: smooth;
  }

  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  #phone-scroll-container,
  #phone-scroll-container-android {
    scroll-behavior: smooth;
    transition: transform 0.8s cubic-bezier(0.25, 0.1, 0.25, 1);
  }

  /* --- âœ… Store Badge Consistency Fix --- */
  /* --- ðŸŽ¯ Final Balanced Store Badge Sizes --- */
/* --- ðŸŽ¯ Final Balanced App Store + Play Store Badges --- */
/* --- ðŸŽ¯ Final Perfect Alignment for App Store & Google Play badges --- */
.store-badge {
  width: auto;
  object-fit: contain;
  display: block;
  transition: transform 0.3s ease;
}

/* App Store: visually heavier, slightly taller ratio */
.store-badge.appstore {
  height: 54px;
  transform: scale(1) translateY(1px);
  transform-origin: center;
}

/* Google Play: more horizontal, visually thinner */
.store-badge.playstore {
  height: 54px;
  transform: scale(1.05, 1.08) translateY(-0.5px);
  transform-origin: center;
}

/* Responsive adjustments */
@media (max-width: 1024px) {
  .store-badge.appstore {
    height: 48px;
    transform: scale(1) translateY(1px);
  }
  .store-badge.playstore {
    height: 48px;
    transform: scale(1.05, 1.08) translateY(-0.5px);
  }
}

@media (max-width: 768px) {
  .store-badge.appstore {
    height: 42px;
    transform: scale(1) translateY(1px);
  }
  .store-badge.playstore {
    height: 42px;
    transform: scale(1.05, 1.08) translateY(-0.5px);
  }
}


/* Small screens (mobiles) */
@media (max-width: 768px) {
  .store-badge.appstore {
    height: 38px;
  }
  .store-badge.playstore {
    height: 42px;
  }
}

</style>
