---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const featuredApps = (await getCollection('apps'))
  .filter(app => app.data.featured)
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 3);
---

<Layout title="TinyKite - Utility Apps That Make Your Life Easier">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-primary/10 via-white to-white dark:from-primary/5 dark:via-dark dark:to-dark py-20 md:py-32">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          Utility Apps That <span class="text-primary">Make Your Life Easier</span>
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
          TinyKite builds simple, fast, and beautiful utility applications to help you get things done.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/apps" class="btn-primary">
            Browse Apps
          </a>
          <a href="/about" class="btn-secondary">
            Learn More
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Apps Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">Featured Apps</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {featuredApps.length > 0 ? (
          featuredApps.map(app => (
            <a 
              href={`/apps/${app.slug}`}
              class="block p-6 bg-white dark:bg-dark-lighter rounded-lg border border-gray-200 dark:border-dark-light hover:border-primary dark:hover:border-primary transition-all hover:shadow-lg"
            >
              {app.data.icon && (
                <div class="text-4xl mb-4">{app.data.icon}</div>
              )}
              <h3 class="text-xl font-semibold mb-2">{app.data.title}</h3>
              <p class="text-gray-600 dark:text-gray-400">{app.data.description}</p>
            </a>
          ))
        ) : (
          <div class="col-span-3 text-center text-gray-600 dark:text-gray-400 py-12">
            <p>No featured apps yet. Check back soon!</p>
          </div>
        )}
      </div>
      {featuredApps.length > 0 && (
        <div class="text-center mt-12">
          <a href="/apps" class="btn-primary">
            View All Apps
          </a>
        </div>
      )}
    </div>
  </section>

  <!-- Why TinyKite Section -->
  <section class="py-20 bg-gray-50 dark:bg-dark-lighter">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">Why TinyKite?</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div class="text-center">
          <div class="w-16 h-16 bg-primary/10 dark:bg-primary/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Fast & Efficient</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Built for speed with modern technologies that ensure quick load times.
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-primary/10 dark:bg-primary/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Simple to Use</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Clean interfaces designed for ease of use without sacrificing functionality.
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-primary/10 dark:bg-primary/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Privacy First</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Your data stays yours. We build tools that respect your privacy.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center bg-gradient-to-r from-primary to-primary-light text-white rounded-2xl p-12">
        <h2 class="text-3xl font-bold mb-4">Ready to Get Started?</h2>
        <p class="text-xl mb-8 text-white/90">
          Explore our collection of utility apps and find the perfect tools for your needs.
        </p>
        <a href="/apps" class="inline-block px-8 py-3 bg-white text-primary font-semibold rounded-lg hover:bg-gray-100 transition-colors">
          Browse All Apps
        </a>
      </div>
    </div>
  </section>
</Layout>
